html
  head
    title= title
    link(rel='stylesheet', href='css/bootstrap.min.css')
    link(rel='stylesheet', href='css/image-picker.css')
    link(rel='stylesheet', href='css/ui.jqgrid.css')
    link(rel='stylesheet', href='css/ui.jqgrid-bootstrap-ui.css')
    link(rel='stylesheet', href='css/ui.jqgrid-bootstrap.css')
    link(rel='stylesheet', href='css/jquery-ui.min.css')
    link(rel='stylesheet', href='css/jquery-ui.theme.min.css')
    link(rel='stylesheet', href='css/jquery-ui-timepicker-addon.min.css')
    link(rel='stylesheet', href='css/nouislider.min.css')
    link(rel='stylesheet', href='css/jstree.min.css')
    link(rel='stylesheet', href='css/files.css')
    link(rel='stylesheet', href='css/style.css')
    link(rel='https://fonts.googleapis.com/css?family=Roboto:400,500|Inconsolata:400,700')
  body
    div.container
      div.clockBar#clockBar
        div
        div.clock#est
        div.clock#utc
        div
      include nav.pug
      div.jumbotron.diagram_jumbotron#diagram_jumbotron(style='height:700px')
        div.canvas#diagram
          canvas#background
          canvas#canvas
          div#message
          div#zoom-buttons
            button.zoomIn#zoomIn.ui-icon.ui-icon-zoomin(onclick='zoomIn()')
            button.zoomOut#zoomOut.ui-icon.ui-icon-zoomout(onclick='zoomOut()')
            button.cancelLink#cancelLink(onclick='cancelLink()') Cancel Link
        div.toolbar#toolbar
          div.toolbar-nav#toolbar-nav
            div.nav-button#toolsButton(onclick='toggleToolbar("tools")') T<br>O<br>O<br>L<br>S
            div.nav-button#tasksButton(onclick='toggleToolbar("tasks")') T<br>A<br>S<br>K<br>S
            div.nav-button#notesButton(onclick='toggleToolbar("notes")') N<br>O<br>T<br>E<br>S
            div.nav-button#opsButton(onclick='toggleToolbar("opnotes")') O<br>P<br>S
            div.nav-button#filesButton(onclick='toggleToolbar("files")') F<br>I<br>L<br>E<br>S
            div.nav-button#logButton(onclick='toggleToolbar("log")') L<br>O<br>G
          div.toolbar-body#toolbar-body
            div#opsForm.toolbar-form
              table#opnotes
              div#opnotesPager
              button.btn.btn-primary#downloadOpnotes(onclick='downloadOpnotes()') Download
            div#notesForm.toolbar-form
              textarea#notes
            div#tasksForm.toolbar-form
              textarea.tasks#hostTasks
              textarea.tasks#networkTasks
              textarea.tasks#ccirs
            div#filesForm.toolbar-form
              div#files
              div#progressbar-container
                div#progressbar
            form#toolsForm.toolbar-form
              span.toolbarTitle#toolbarTitle Edit Object
              button.propButton.btn.btn-success#newObjectButton(type='button' disabled) New!
              input(type="hidden", name="id")#propID
              input(type="hidden", name="type")#propType
              div.form-group#propNameGroup
                label Name
                textarea(name="name" onchange="updatePropName(this.value)" disabled).form-control#propName
              div.form-group#propColorGroup
                label Color
                div.colors
                    input(type="color", name="fillcolor" onchange="updatePropFillColor(this.value)" value="#017bbb" disabled).form-control.propColor#propFillColor
                    input(type="color", name="strokecolor" onchange="updatePropStrokeColor(this.value)" value="#017bbb" disabled).form-control.propColor#propStrokeColor
              div.form-group#propObjectGroup
                ul
                  li
                    a(href="#tabs-icon") Icons
                  li
                    a(href="#tabs-shape") Shapes
                  li
                    a(href="#tabs-link") Links
                div#tabs-icon
                  select.image-picker#prop-icon
                    each icon in icons
                      option(data-img-src="images/icons/" + icon, data-img-class="first", value=icon) icon
                div#tabs-shape
                  select.image-picker#prop-shape
                    each shape in shapes
                      option(data-img-src="images/shapes/" + shape, data-img-class="first", value=shape) shape
                div#tabs-link
                  select.image-picker#prop-link
                    each link in links
                      option(data-img-src="images/links/" + link, data-img-class="first", value=link) link
              div.form-group#moveObject
                  button.propButton.btn.btn-default#moveUp(type='button' disabled) Up
                  button.propButton.btn.btn-default#moveDown(type='button' disabled) Down
                  button.propButton.btn.btn-default#moveToFront(type='button' disabled) Front
                  button.propButton.btn.btn-default#moveToBack(type='button' disabled) Back
              div.form-group#makeObject
                  button.propButton.btn.btn-primary#insertObjectButton(type='button' disabled) Insert
                  button.propButton.btn.btn-info#editDetailsButton(type='button' onclick="editDetails()") Details
                  button.propButton.btn.btn-danger#deleteObjectButton(type='button') Delete
                  button.btn.btn-default(type='button' onclick="closeToolbar()") Cancel
            div#logForm.toolbar-form
              div#log
              input(type="text", name="message-input-box")#message-input-box.message-input-box
      div.jumbotron#events
        div#sliderContainer
          button#play.ui-icon.ui-icon-play(onclick='toggleAnimateSlider()')
          div#slider
        table#events2
        div#eventsPager
        span(style='margin-right: 10px;')
          button.btn.btn-primary#downloadEvents(onclick='downloadEvents()') Download Events
        span
          a.btn.btn-primary#downloadEvents(onclick='downloadDiagram(this)') Download Diagram
script var permissions = "#{permissions}".split(',');
